{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "mkdir -p ${config:playdate.output}; pdc -k source ${config:playdate.output} ",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "revealProblems": "onProblem"
      },
      "problemMatcher": {
        "owner": "lua",
        "pattern": {
          "regexp": "^(warning|error):\\s+(.*):(\\d+):\\s+(.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "message": 4
        }
      },
      "dependsOn": ["incrementBuild"]
    },
    {
      "label" : "incrementBuild",
      "type" : "shell",
      "command" : "./.vscode/buildnum.sh",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "showReuseMessage": false,
        "clear": true,
      },
    },
    
  ]
}