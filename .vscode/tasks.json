{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "node gfxtool\/gfxtool.js SourceAssets\/ Source\/; pdc source ${config:playdate.output}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "revealProblems": "onProblem"
      },
      "problemMatcher": {
        "owner": "lua",
        "pattern": {
          "regexp": "^(warning|error):\\s+(.*):(\\d+):\\s+(.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "message": 4
        }
      }
    }
  ]
}